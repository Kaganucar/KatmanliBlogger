<!--Controller tarafına inputlara girilen verileri göndermemizi sağlayan bir mekanizmadır.-->
<form action="/admin/Blog/Guncelle/@Model.id" method="post" enctype="multipart/form-data">
    <img src="/images/@Model.Images" width="400" />
    <br />
    <input type="file" name="dosya" class="form-control" /><br />
    <input type="text" name="BlogName" placeholder="Blog Adı" value="@Model.BlogName" class="form-control" /><br />

    <select name="CategoriesId" class="form-control">
        @foreach (var item in ViewBag.Kategoriler)
        {
           if (item.id == Model.CategoriesId)
            {
                <option value="@item.id">@item.CategoryName</option>
            }
        }
        @foreach (var item in ViewBag.Kategoriler)
        {
            if (item.id != Model.CategoriesId)
            {
                <option value="@item.id">@item.CategoryName</option>
            }
        }
    </select>
    <br />
    <textarea type="text" name="Explanation" placeholder="Blog Açıklama" class="form-control" style="height:250px">@Model.Explanation</textarea><br /><br />



    <button type="submit" class="btn btn-primary"> Kaydet</button>

</form>

@if (ViewBag.message != null)
{
    <div class="alert alert-info">@ViewBag.message</div>
}
@if (ViewBag.error != null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}