<a href="/admin/Bloglar" class="btn btn-primary">Geri Git</a>

<!--Controller tarafına inputlara girilen verileri göndermemizi sağlayan bir mekanizmadır.-->
<form action="/admin/Bloglar/Ekle" method="post" enctype="multipart/form-data">
    <br />
    <input type="file" name="dosya"  class="form-control" /><br />
    <input type="text" name="BlogName" placeholder="Blog Adı" class="form-control" /><br />

    <select name="CategoriesId" class="form-control">
        @foreach (var item in ViewBag.Kategoriler)
        {
            <option value="@item.id">@item.CategoryName</option>
        }
    </select>

    <textarea type="text" name="Explanation" placeholder="Blog Açıklama" class="form-control" style="height:250px"></textarea><br /><br />
   
    
    
    <button type="submit" class="btn btn-primary"> Kaydet</button>

</form>

@if (ViewBag.message != null)
{
    <div class="alert alert-info">@ViewBag.message</div>
}
@if (ViewBag.error != null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}