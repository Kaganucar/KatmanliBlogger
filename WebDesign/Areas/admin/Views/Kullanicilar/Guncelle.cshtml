<a href="/admin/Kullanicilar" class="btn btn-primary">Geri Git</a>

<!--Controller tarafına inputlara girilen verileri göndermemizi sağlayan bir mekanizmadır.-->
<form action="/Admin/Kullanici/Guncelle/@Model.id" method="post">
    <br />
    <input type="text" name="Email" value="@Model.Email" class="form-control" /><br />
    <input type="text" name="Passwords" value="@Model.Passwords" class="form-control" /><br />

    <select name="Roles" class="form-control">
        @if (Model.Roles == "Admin")
        {
            <option value="Admin">Admin</option>
            <option value="Uye">Uye</option>
        }
        else
        {
            <option value="Uye">Uye</option>
            <option value="Admin">Admin</option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Güncelle</button>

</form>

@if (ViewBag.message != null)
{
    <div class="alert alert-info">@ViewBag.message</div>
}